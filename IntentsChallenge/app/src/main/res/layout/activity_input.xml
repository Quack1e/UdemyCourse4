<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/PTname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/enter_name"
        android:inputType="textPersonName"
        android:textColor="#272424"
        android:textColorHint="#57000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/PTnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/enter_phone_number"
        android:inputType="textPersonName"
        android:textColor="#272424"
        android:textColorHint="#57000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/PTweb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/enter_web_adress"
        android:inputType="textPersonName"
        android:textColor="#272424"
        android:textColorHint="#57000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/PTmaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/enter_street_adress"
        android:inputType="textPersonName"
        android:textColor="#272424"
        android:textColorHint="#57000000"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IVhappy"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="auto"
            app:srcCompat="@drawable/ic_baseline_sentiment_satisfied_alt_24" />

        <ImageView
            android:id="@+id/IVsatisfied"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="auto"
            app:srcCompat="@drawable/ic_baseline_sentiment_satisfied_24" />

        <ImageView
            android:id="@+id/IVsad"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="auto"
            app:srcCompat="@drawable/ic_baseline_sentiment_very_dissatisfied_24" />

    </LinearLayout>
</LinearLayout>